  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{name: "viewport", content: "width=device-width, initial-scale=1"}
    %meta{property: "wb:webmaster", content: "03e03f43f2c9a830"}
    %title= Setting.title
    = stylesheet_link_tag    'front_page', media: 'all'
    = javascript_include_tag 'front_page'
