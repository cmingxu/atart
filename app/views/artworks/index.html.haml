%h1 Listing artworks

%table
  %thead
    %tr
      %th Name
      %th Desc
      %th Artist
      %th Images
      %th
      %th
      %th

  %tbody
    - @artworks.each do |artwork|
      %tr
        %td= artwork.name
        %td= artwork.desc
        %td= artwork.artist_id
        %td= artwork.images
        %td= link_to 'Show', artwork
        %td= link_to 'Edit', edit_artwork_path(artwork)
        %td= link_to 'Destroy', artwork, :method => :delete, :data => { :confirm => 'Are you sure?' }

