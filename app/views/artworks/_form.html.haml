= form_for @artwork do |f|
  - if @artwork.errors.any?
    #error_explanation
      %h2= "#{pluralize(@artwork.errors.count, "error")} prohibited this artwork from being saved:"
      %ul
        - @artwork.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_area :name
  .field
    = f.label :desc
    = f.text_area :desc
  .field
    = f.label :artist_id
    = f.number_field :artist_id
  .field
    = f.label :images
    = f.text_area :images
  .actions
    = f.submit 'Save'
