%h1 Listing events

%table
  %thead
    %tr
      %th Name
      %th Gallery
      %th Artist name
      %th Address
      %th Lng
      %th Lat
      %th Begin at
      %th End at
      %th
      %th
      %th

  %tbody
    - @events.each do |event|
      %tr
        %td= event.name
        %td= event.gallery
        %td= event.artist_name
        %td= event.address
        %td= event.lng
        %td= event.lat
        %td= event.begin_at
        %td= event.end_at
        %td= link_to 'Show', event
        %td= link_to 'Edit', edit_event_path(event)
        %td= link_to 'Destroy', event, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Event', new_event_path
