= form_for @event do |f|
  - if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :gallery
    = f.text_field :gallery
  .field
    = f.label :artist_name
    = f.text_field :artist_name
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :lng
    = f.text_field :lng
  .field
    = f.label :lat
    = f.text_field :lat
  .field
    = f.label :begin_at
    = f.datetime_select :begin_at
  .field
    = f.label :end_at
    = f.datetime_select :end_at
  .actions
    = f.submit 'Save'
