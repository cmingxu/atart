= form_for @message do |f|
  - if @message.errors.any?
    #error_explanation
      %h2= "#{pluralize(@message.errors.count, "error")} prohibited this message from being saved:"
      %ul
        - @message.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :send_from_id
    = f.number_field :send_from_id
  .field
    = f.label :send_to_id
    = f.number_field :send_to_id
  .field
    = f.label :content
    = f.text_area :content
  .actions
    = f.submit 'Save'
