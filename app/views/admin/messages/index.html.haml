%h1 Listing messages

%table
  %thead
    %tr
      %th Send from
      %th Send to
      %th Content
      %th
      %th
      %th

  %tbody
    - @messages.each do |message|
      %tr
        %td= message.send_from_id
        %td= message.send_to_id
        %td= message.content
        %td= link_to 'Show', message
        %td= link_to 'Edit', edit_message_path(message)
        %td= link_to 'Destroy', message, :method => :delete, :data => { :confirm => 'Are you sure?' }

