= link_to "录入艺术家", new_admin_artist_path, class: 'btn pull-right btn-primary'

%table.table
  %thead
    %tr
      %th 标号
      %th 姓名
      %th 头像
      %th 商品数量
      %th 操作

  %tbody
    - @artists.each do |artist|
      %tr
        %td= link_to artist.id, edit_admin_artist_path(artist)
        %td= link_to artist.name, edit_admin_artist_path(artist)
        %td= image_tag artist.avatar.thumb.url
        %td
          = artist.products.count
          (
          = link_to "增加商品", new_admin_product_path(artist_id: artist.id)
          )
        %td
          = link_to "修改", edit_admin_artist_path(artist)
          = link_to "删除", admin_artist_path(artist), method: :delete, data: { confirm: "确信要删除当前艺术家？" }
