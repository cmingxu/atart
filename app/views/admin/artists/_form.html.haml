= form_for @artist do |f|
  - if @artist.errors.any?
    #error_explanation
      %h2= "#{pluralize(@artist.errors.count, "error")} prohibited this artist from being saved:"
      %ul
        - @artist.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :short_desc
    = f.text_area :short_desc
  .field
    = f.label :desc
    = f.text_area :desc
  .field
    = f.label :artworks_count
    = f.number_field :artworks_count
  .actions
    = f.submit 'Save'
