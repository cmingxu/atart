	<div class="page-content mall">
		<ul class="item-list">
      <% @products.each do |p| %>
			<li>
      <a href="<%= product_path(p) %>" class="img">
          <%= image_tag p.images.first.try(:url), width: '363', height: '206' %>
				</a>
          <%= link_to "#", p.short_desc, class: 'description' %>
				<span class="location">
					ATH
				</span>
            	<span class="price"><%= p.price %>CNY</span>
            	<span class="cart"></span>
			</li>
      <% end %>
		</ul>
	</div>

