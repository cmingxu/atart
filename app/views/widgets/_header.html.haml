.container-fluid.head
  .brand.pull-left
    = image_tag "logo.png", style: "height: 30px"
  %ul.list-inline.pull-right
    - if user_signed_in?
      %li= link_to "退出登录", destroy_user_session_path, method: :delete, class: ""
      %li= link_to  "个人后台", dashboard_path, class: ""
      %li= link_to  "网站后台", admin_path, class: ""
      %li= link_to  "回到首页", root_path, class: ""
    - else
      %li= link_to "登录", new_user_session_path, class: '', role: 'button'
      %li= link_to "注册", new_user_registration_path, class: ''
      %li= link_to "QQ登录", user_omniauth_authorize_path(:qq_connect), class: ''
