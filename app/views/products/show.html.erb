<%= javascript_tag do %>
  $(document).ready(function () {
    $('#add_to_cart').click(function(){
      $.ajax({
        url: '/orders/add_cart',
        method: 'patch',
        data: "text=" + $('#add_to_cart').data("product-id") + ',1'
      })
    })
  });
<% end %>
