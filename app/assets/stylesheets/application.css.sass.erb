@import 'c3'
@import "bootstrap-sprockets"
@import 'bootstrap-datetimepicker'

$border-radius-base:        0px !default


@import "bootstrap"

body
  background-color: #ccd1e7
.fc-container
  padding-left: 160px
  padding-top: 50px
.fc-sidebar
  width: 160px
  position: absolute
  left: 0px
  background-color: white
  ul
    width: 100%
    min-height: 1000px
    li
      width: 100%

.fc-main
  padding: 10px
.head
  height: 50px
  position: fixed
  top: 0px
  border-top: 3px solid orange
  width: 100%
  background-color: white
  box-shadow: 5px 0px 5px rgba(blue, .3)
  z-index: 10

.form-horizontal
  background-color: white
  padding: 10px
  margin-bottom: 20px
  .form-group
    margin-left: 0px
    margin-right: 0px
.table
  background-color: white
  margin-top: 10px


.image_preivew
  cursor: hand
